<layout version="0.1.0">
    <!-- Default su tutte le pagine -->
    <default>
        <reference name="head">
            <action method="addJs"><script>mps/location/location.js</script></action>
            <action method="addItem"><type>css</type><name>mps/location/location.css</name></action>
        </reference>
        <reference name="after_body_start">
            <block type="mpslocation/select" name="location.select" as="location.select" template="mps/location/select/form.phtml"/>
            <block type="mpslocation/select" name="location.warnings" as="location.warning" template="mps/location/select/warning.phtml"/>
        </reference>        
    </default>
        
</layout>